<%= form_with(model: auction, local: true) do |form| %>
  <% if auction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(auction.errors.count, "error") %> prohibited this auction from being saved:</h2>

      <ul>
        <% auction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group>
    <%= form.label :Item %>
    <%= form.text_field :name, { class: "form-control", required:true } %>
  </div>

  <div class="form-group>
    <%= form.label :Starting_price %>
    <%= form.text_field :current_price, :value => 0, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= form.label :Description %><br>
    <%= form.text_area :description, { class: "form-control", required:true } %>
  </div>

  <div class="form-group>
    <%= form.label :auction_start_time %>
    <%= form.datetime_select :auction_start_time, { class: "form-control", required:true } %>
  </div>

  <div class="form-group>
    <%= form.label :auction_end_time %>
    <%= form.datetime_select :auction_end_time, { class: "form-control", required:true } %>
  </div>

  <div class="form-group>
    <%= form.label :category %>
    <%= form.select(:category,  options_for_select( [ ["Please select ", nil],  ['Antiques'], ['Collectibles'],['Electronics'], ['Entertainment'], ['Fashion'], ['Food'], ['Home & Garden'], ['Moters & Car Parts'], ['Sporting Goods'], ['Toys & Hobbies'], ['Other'] ]), { class: "form-control", required:true })%>
  </div>

  <div class="form-group>
    <%= form.label :image %>
    <%= form.file_field :image, required:true %>
  </div>

  <p>
  </p>

  <div  class = "form-group">           
    <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
<% end %>
