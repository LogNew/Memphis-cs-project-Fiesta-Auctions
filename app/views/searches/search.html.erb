<h1>Find Auctions and Sellers!</h1>
<br>

<%= form_tag(searches_path, :method => "get") do %>
    <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Enter a Product Name, Seller, or Category", class: "form-control" %>
        <div class="input-group-btn">
            <%= button_tag "", :class => 'btn btn-into glyphicon glyphicon-search', :name => nil %>
        </div>
    </div>
<% end %>

<br>

<% @results.each do |result| %>
    <div class="col d-flex justify-content-center">
        <div class="card text-center" style="width: 30rem">
            
            <div class="card-body">
                <h5 class="card-title text-primary"><%= result.name %></h5>
                <h5 class="card-text text-primary">Highest Bid: $<%= result.highest_bid %></h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Expires: <%= result.auction_end_time.strftime("%d/%m/%Y") %></li>
                <li class="list-group-item">Category: <%= result.category%></li>
                <li class="list-group-item">Seller: <a <%= link_to result.seller.name, user_path(result.user) %></a></li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" <%= link_to 'Bid Now!', new_bid_path(result.user) %></a>
            </div>
        </div>
    </div>
    <br>
<% end %>





