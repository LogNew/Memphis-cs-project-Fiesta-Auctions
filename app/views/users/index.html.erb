<h1>Sellers</h1><br/>

<div class="container">
    <div class ="row">
        <% users.each do |user| %>
            <% if user.auctions.present? %>
                <div class="card container border-primary mb-3" style ="width: 30rem">
                    <div class="card-header row justify-content-between text-white bg-primary">
                        <h4 class='m-0'>
                            <%= user.name %>
                        </h4>
                    </div>
                    <div class="card-body">
                        <% if user.avatar.attached?%>
                            <div class="avatar">
                                <%= image_tag(user.avatar, class: 'img-circular', width:100, height:100, align: "right") %>
                            </div>
                        <%end%>
                        <p class="card-text">Location: <%= user.location %>
                        <p class="card-text">Rating: <%= user.rating %>
                        <h6 class="card-subtitle mb-2 text-muted"><%= user.email%></h6>
                    </div>    
                    <div class="card-footer">
                        <%= link_to 'More About This Seller', user_path(user) %>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
